	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: 远程连接",
			"type": "python",
			"request": "attach",
			"connect": { "host": "172.18.42.211", "port": 5678 },
			"pathMappings": [
				{ "localRoot": "${workspaceFolder}", "remoteRoot": "." }
			]
		},
		{
			"name": " Django-PLUS",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}\\manage.py",
			"args": ["runserver_plus"],
			"django": true
		},
		{
			"name": "Django",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}\\manage.py",
			"args": ["runserver"],
			"django": true
		},
		{
			"name": "Python",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		}
	]
}
